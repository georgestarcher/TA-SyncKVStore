[kvstore_to_index://<name>]
u_splunk_server = The Remote Splunk Server with the source KVStore
u_source_app = The remote app context with the source KVStore Collection
u_source_collection = The remote source KVStore Collection Name
global_account = The stored rest API credential valid on the remote Splunk Server with permissions to the source KVStore

[kvstore_to_kvstore://<name>]
u_splunkserver = The Remote Splunk Server with the source KVStore
u_srcapp = The remote app context with the source KVStore Collection
u_srccollection = The remote source KVStore Collection Name
global_account = The stored rest API credential valid on the remote Splunk Server with permissions to the source KVStore
u_desttableaction = Choose to force destination table full replacement or update table
u_destapp = The local app context with the destination KVStore Collection
u_destcollection = The local destination KVStore Collection Name
